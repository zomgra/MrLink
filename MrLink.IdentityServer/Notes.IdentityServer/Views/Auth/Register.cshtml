@model RegisterViewModel

<link href=@Url.Content("~/styles/app.css") rel="stylesheet" type="text/css" />
<form asp-action="Register" asp-controller="Auth" method="post">
    <input hidden asp-for="ReturnUrl" />
    <div class="header">Register</div>
    <div class="block">
        <label>Username</label>
        <input asp-for="Username" class="input" />
    </div>
    <div class="block">
        <label>Password</label>
        <input asp-for="Password" class="input" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="block">
        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword" class="input" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="block">
        <button type="submit" class="button">Sign in</button>
    </div>
    <a asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" asp-controller="Auth" class="switch-button">Have account</a>
</form>