<body class="text-center">

    <main style="display: inline-block; float: none" class="form-signin">
        <form asp-action="Register" asp-controller="Auth" method="post" class="mt-xl-5 w-auto">
            <h1 class="h3 mb-3 mt-5 fw-normal">Пожалуйста, введите данные</h1>
            <input hidden asp-for="ReturnUrl" />
            <div class="form-floating pt-2">
                <label>Username</label>
                <input class="form-control" asp-for="@Model.Username" placeholder="Username">
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-floating pt-2">
                <label>Password</label>
                <input type="password" asp-for="@Model.Password" class="form-control" id="floatingPassword" placeholder="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-floating mb-3 pt-2">
                <label>Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <button type="submit" class="w-100 btn mb-3 btn-lg btn-outline-primary">Sign in</button>
            <a asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" asp-controller="Auth" class="btn btn-s btn-info">Уже есть аккаунт?</a>
            <p class="mt-5 mb-3 text-muted">© 2022</p>
        </form>
    </main>
</body>