@model LinkListViewModel



<div class="p-5 mb-4 bg-dark border border-3 text-white rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Пользовательский джамботрон</h1>
        <p class="col-md-8 fs-4">Используя ряд утилит, Вы можете создать этот jumbotron, точно такой же, как в предыдущих версиях Bootstrap. Ознакомьтесь с приведенными ниже примерами, как Вы можете сделать ремикс и изменить его по своему вкусу.</p>
        <a asp-action="CreateLink" class="btn btn-outline-warning btn-lg" type="button">Создать Ссылку</a>
    </div>
</div>
if(!@User?.Identity?.IsAuthenticated)
{
    <p>Please, sing in</p>
}
else
{
<div class="row align-items-md-stretch ">
    if(@Model.Links.Count != 0){

            @foreach (var link in Model.Links)
            {
                <div class="col-md-6 m-2 border border-3">
                    <div class="h-100 p-5 text-white bg-dark rounded-3">
                            <p>@link.FullLink - @link.Link</p>
                            <a asp-action="GetInfo" class="btn btn-outline-info" asp-route-guid="@link.LinkId">View Info</a>
                    </div>
                </div>  
            }
    }else{
        <p class="text-light">You don`t have avaible link</p>
    }
</div>
}



<script>
    alert('@Model.Links.Count')
</script>